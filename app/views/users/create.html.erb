

<!-- MODAL Signup -->
<div class="modal fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="modal-register-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <h3 class="modal-title" id="modal-register-label">Sign up now</h3>
        <p>Fill in the form below to get instant access:</p>
      </div>

      <div class="modal-body">
        <%= form_for(@user) do |f| %>

            <%= render 'shared/error_messages' %>

            <%= f.label :name %>
            <%= f.text_field :name, class:'form-name form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class:'form-email form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class:'form-password form-control' %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class:'form-password-confirm form-control' %>

            <div style="padding-bottom: 10px"></div>

            <%= f.submit "Create my account", class: "btn btn-primary form-control" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- end MODAL Signup -->



<% if @user.errors.any? %>

    <script>
      jQuery(document).ready(function() {
        $('#modal-register').modal('show');
        console.log('showing from new.html...');
      });
    </script>

<% end %>

